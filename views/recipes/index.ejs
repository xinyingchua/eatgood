<%- include('../partials/head') %>

<div class="container">
  <h2 style= "text-align: left;">Explore, Invent, Reimagine Healthy Recipes</h2>
  <% if (user) { %>
  <a href="/recipes/new" class="btn btn-light" style= "text-align: left; margin-bottom: -50px"><i class="far fa-plus-square"></i> Add New Post</a>
  <% } %>
    <% if (recipes.length !== 0) { %>

    <div class="row row-cols-1 row-cols-md-2 row-cols-sm-2 row-cols-lg-4 gx-5 gy-5 m-4 " data-masonry='{"percentPosition": true }'>
      <% recipes.forEach((element, index) => { %>

      <div class="col">
        <!-- <div class="col-sm-4 py-3 g-3"> -->
        <!-- <div class="col-sm-4 col-md-3 py-3 g-3"></div> -->

        <div class="card">
          <a href="/recipes/<%= element.slug %> ">
            <img
              class="card-img-top"
              src="<%= element.image %>"
              alt="Card image cap"
          /></a>
          <div class="card-body">
            <h7 class="card-title"><%= element.name %></h7>
          </div>
        </div>
      </div>
        <% }); %>
      </div>

      <% } else { %>

      <p>No product is available</p>

      <% } %>
    </div>
  <!-- </div> -->

  <%- include('../partials/foot') %>
</div>
