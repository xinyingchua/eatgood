<%- include('../partials/head') %>

<div class="container ">

  <a href="/recipes/new" class="btn btn-light"><i class="far fa-plus-square"> Add New</i></a>

   <div class="row card-group" data-masonry='{"percentPosition": true }'>


    <% if (recipes.length !== 0) { %> 

      <% recipes.forEach((element, index) => { %>

    <div class="col-sm-4 col-md-3 py-3">

    <div class="card card-link" style="width: 18rem;"><a href ="/recipes/<%= element.slug %> ">
        <img class="card-img-top" src="<%= element.image %>" alt="Card image cap"></a>
        <div class="card-body">
          <h7 class="card-title"><%= element.name %></h7>
        </div>
        <div class="card-footer">
          <small class="text-muted">Last updated 3 mins ago</small>
        </div>
      </div>
    </div>

    <% }); %>

    <% } else { %>

        <p>No product is available</p>

    <% } %>

  </div>

</div>


<%- include('../partials/foot') %>
