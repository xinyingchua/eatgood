<%- include('../partials/head') %>


    <div class="container">
        <h2 style= "text-align: left;">Welcome to your dashboard, <%=user.first_name%>!</h2>
        <a href="/recipes/new" class="btn btn-light" style= "text-align: left; margin-bottom: -50px"><i class="far fa-plus-square"></i> Add New Post</a>
          <% if (recipes.length !== 0) { %>
      
          <div class="row row-cols-1 row-cols-md-2 row-cols-sm-2 row-cols-lg-4 gx-5 gy-5 m-4 " data-masonry='{"percentPosition": true }'>
            <% recipes.forEach((element, index) => { %>
      
            <div class="col">
      
              <div class="card">
                <a href="/recipes/<%= element.slug %> ">
                  <img
                    class="card-img-top"
                    src="<%= element.image %>"
                    alt="Card image cap"
                /></a>
                <div class="card-body">
                  <h7 class="card-title"><%= element.name %></h7>
                </div>
                <!-- <div class="card-footer">
                  <small class="text-muted">Last updated 3 mins ago</small>
                </div> -->
              </div>
            </div>
              <% }); %>
            </div>
      
            <% } else { %>

              

            <div class = "container-empty-field" style="text-align: left; margin-top: 50px;">

            <a href="/recipes/new" class="btn btn-light" style= "text-align: left; margin-bottom: 10px"><i class="far fa-plus-square"></i> Add New Post</a>
            <p>Your feed is empty. Click to create a post now!</p>
      
            <% } %>
          </div>
          </div>



        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js" integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous" async></script>
      </body>
      </html>